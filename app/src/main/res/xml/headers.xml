<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">
    <header
        android:fragment="com.nextgis.logger.ui.fragment.MainPreferenceFragment"
        android:title="@string/settings_main"/>
    <header
        android:fragment="com.nextgis.logger.ui.fragment.SensorsPreferenceFragment"
        android:title="@string/settings_sensors"/>
    <header
        android:fragment="com.nextgis.logger.ui.fragment.AccountPreferenceFragment"
        android:title="@string/settings_account"/>
    <header android:title="@string/ngid_settings">
        <intent
            android:targetClass="com.nextgis.logger.ui.activity.NGIDSettingsActivity"
            android:targetPackage="com.nextgis.logger"/>
    </header>
    <header
        android:fragment="com.nextgis.logger.ui.fragment.NGIDSettingsFragment"
        android:title="@string/update_check">
        <extra
            android:name="updater"
            android:value="true"/>
    </header>
</preference-headers>