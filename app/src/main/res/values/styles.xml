<resources>

    <style name="tv_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?android:textColorLink</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_pager_strip">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@drawable/title_strip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="tv_info">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_info_large" parent="tv_info">
        <item name="android:singleLine">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="tv_info_medium" parent="tv_info">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="tv_info_row_small" parent="tv_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>