<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:gravity="center"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_network_gen"
            style="@style/tv_info_large"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tv_network_type"
            style="@style/tv_info_large"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_mcc"/>

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_mnc"/>

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_lac"/>

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_cid"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_network_mcc"
                style="@style/tv_info_row_small"/>

            <TextView
                android:id="@+id/tv_network_mnc"
                style="@style/tv_info_row_small"/>

            <TextView
                android:id="@+id/tv_network_lac"
                style="@style/tv_info_row_small"/>

            <TextView
                android:id="@+id/tv_network_cid"
                style="@style/tv_info_row_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_psc"/>

            <TextView
                android:id="@+id/tv_network_psc"
                style="@style/tv_info_row_small"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_info_row_small"
                android:text="@string/info_power"/>

            <TextView
                android:id="@+id/tv_network_power"
                style="@style/tv_info_row_small"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>