<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_dht_temp" />

            <TextView
                android:id="@+id/tv_temperature"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_dht_humidity" />

            <TextView
                android:id="@+id/tv_humidity"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_noise" />

            <TextView
                android:id="@+id/tv_noise"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_CO" />

            <TextView
                android:id="@+id/tv_CO"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_C4H10" />

            <TextView
                android:id="@+id/tv_C4H10"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_info_large"
                android:text="@string/external_CH4" />

            <TextView
                android:id="@+id/tv_CH4"
                style="@style/tv_info_small"
                android:layout_width="wrap_content" />

            <include layout="@layout/divider" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>